#!/bin/sh

# No external display present 
xrandr --output eDP1 --auto --primary 

# Display port connected (Display only on external monitor)
xrandr | grep 'DP1 connected 2560' && xrandr --output eDP1 --off --output DP1 --auto --primary

# Display port connected on startup (Display only on external monitor)
xrandr | grep 'DP1 connected 1920' && xrandr --output eDP1 --off --output DP1 --auto --primary && echo "external"


